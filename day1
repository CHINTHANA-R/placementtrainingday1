#include <iostream>
using namespace std;

int findmax(int arr[],int n)
{
  int sum = *arr;
  for(int i=1;i<n;i++)
 
  {
     
     sum+= *(arr+i);
     
   
  }
  int avg = sum/2;
  return avg;
 
}



int main() {
  int arr[]={0,9,5,0,5};
  int n= sizeof(arr)/sizeof(arr[0]);
  cout<<findmax(arr,n);
}
