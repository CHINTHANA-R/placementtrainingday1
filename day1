#include <iostream>
using namespace std;

int findmax(int arr[],int n)
{
  int max = *arr;
  for(int i=0;i<n;i++)
 
  {
     if(*(arr+i)>max)
     max= *(arr+i);
     
   
  }
  return max;
 
}



int main() {
  int arr[]={1,2,45,10,15};
  int n= sizeof(arr)/sizeof(arr[0]);
  cout<<findmax(arr,n);
}


