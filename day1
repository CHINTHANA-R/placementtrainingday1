#include <iostream>
using namespace std;

int findmin(int arr[],int n)
{
  int min = *arr;
  for(int i=0;i<n;i++)
 
  {
     if(*(arr+i)<min)
     min= *(arr+i);
     
   
  }
  return min;
 
}



int main() {
  int arr[]={1,2,45,10,15};
  int n= sizeof(arr)/sizeof(arr[0]);
  cout<<findmin(arr,n);
}


min find using pointer

